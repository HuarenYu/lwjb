<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lwjb.tour.daos.UserDao">
	<sql id="userField">username, password</sql>
	<insert id="save"
			useGeneratedKeys="true" 
			keyProperty="id"
			parameterType="com.lwjb.tour.models.User">
		insert into user
			(username, password)
		values
			(#{username}, #{password})
	</insert>
	<insert id="addRole">
		insert into user_role
			(user_id, role_id)
		values
			(#{userId}, #{roleId})
	</insert>
	<select id="findByUsername"
			resultType="com.lwjb.tour.models.User">
		select 
			id, username
		from user
		where
			username={#username}
	</select>
</mapper>